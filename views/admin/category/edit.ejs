<%- include ../../layouts/header.ejs %>
<!--Navbar-->
<%- include ../../layouts/navbar.ejs %>
<!--Sidebar-->
<%- include ../../layouts/sidebar.ejs %>
<!--Content-->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Data</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/clients">Category</a></li>
            <li class="breadcrumb-item active">Edit Category</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Form Edit</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form
          action="/category/edit/<%= category._id %>?_method=PUT"
          method="POST"
        >
          <div class="card-body">
            <div class="form-group">
              <label for="name">Nama Category</label>
              <input
                value="<%= category.categoryName %>"
                name="categoryName"
                type="text"
                class="form-control"
                id="clientName"
                placeholder="Masukka nama client"
              />
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary fas fa-save">
              Simpan
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!--Footer-->
<%- include ../../layouts/footer.ejs %>
<!--js-->
<%- include ../../layouts/js.ejs %>
