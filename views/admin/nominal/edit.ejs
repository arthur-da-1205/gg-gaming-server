<%- include ../../layouts/header.ejs %>
<!--Navbar-->
<%- include ../../layouts/navbar.ejs %>
<!--Sidebar-->
<%- include ../../layouts/sidebar.ejs %>
<!--Content-->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Data</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit Nominal</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Form Edit</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form 
            action="/nominal/edit/<%= nominal._id %>?_method=PUT" 
            method="POST"
            >
          <div class="card-body">
            <div class="form-group">
              <label>Pilih Koin</label>
              <select class="form-control select2" style="width: 100%;" name="cointName" required>
                <option selected="selected">Gold</option>
                <option>Diamond</option>
                <option>Jewel</option>
              </select>
            </div>
            <div class="form-group">
                <label for="cointQty">Jumlah Koin</label>
                <input
                value="<%= nominal.cointQty %>"
                  name="cointQty"
                  type="number"
                  class="form-control"
                  id="cointQty"
                  placeholder="Jumlah Koin"
                />
            </div>
            <div class="form-group">
                <label for="price">Harga</label>
                <input
                  value="<%= nominal.price %>"
                  name="price"
                  type="number"
                  class="form-control"
                  id="price"
                  placeholder="Harga Koin"
                />
            </div>
            
          <!-- /.card-body -->
          <div class="card-footer">
            <button type="submit" class="btn btn-primary fas fa-save">
              Simpan
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!--Footer-->
<%- include ../../layouts/footer.ejs %>
<!--js-->
<%- include ../../layouts/js.ejs %>
